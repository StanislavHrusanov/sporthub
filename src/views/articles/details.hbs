<div class="container-fluid mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- News Detail Start -->
                <div class="position-relative mb-3">
                    <img class="img-fluid w-100" src="{{article.imageUrl}}" style="object-fit: cover;">
                    <div class="bg-white border border-top-0 p-4">
                        <div class="mb-3">
                            <div class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2">
                                {{article.sport}}</div>
                            <small class="text-body">{{articleDate article.createdAt}}</small>
                        </div>
                        <h1 class="mb-3 text-secondary text-uppercase font-weight-bold">{{article.title}}</h1>
                        {{#each article.text}}
                        <p>{{paragraph}}</p>
                        {{/each}}
