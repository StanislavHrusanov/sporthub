<div class="container-fluid mt-5 pt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-8-catalog">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            {{#if articles.0.league}}
                            <h4 class="m-0 text-uppercase font-weight-bold">
                                {{articles.0.sport}}&nbsp-&nbsp{{articles.0.league}}</h4>
                            {{else}}
                            <h4 class="m-0 text-uppercase font-weight-bold">{{articles.0.sport}}</h4>
                            {{/if}}
                        </div>
                    </div>
                    {{#each articles}}
                    <div class="col-lg-6-catalog">
                        <div class="position-relative mb-3">
                            <img class="img-fluid w-100 h-215" src="{{imageUrl}}" style="object-fit: cover;">
                            <div class="bg-white border border-top-0 p-4">
                                <div class="mb-2">
                                    <div class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2">
                                        {{sport}}</div>
                                    <small class="text-body">{{articleDate createdAt}}</small>
                                </div>
                                <a class="h4 d-block mb-3 text-secondary font-weight-bold"
                                    href="/articles/{{_id}}/details">{{title}}</a>
                            </div>
                            <div class="d-flex justify-content-between bg-white border border-top-0 p-4">
                                <div class="d-flex align-items-center">
                                    {{!-- <img class="rounded-circle mr-2" src="img/user.jpg" width="25" height="25"
                                        alt=""> --}}
                                    <small>Автор:&nbsp{{author.firstName}}&nbsp{{author.lastName}}</small>
                                </div>
                                <div class="d-flex align-items-center">
                                    <small class="ml-3"><i class="far fa-eye mr-2"></i>{{views}}</small>
                                    {{!-- <small class="ml-3"><i class="far fa-comment mr-2"></i>123</small> --}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>